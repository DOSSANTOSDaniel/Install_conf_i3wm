# Automatically run terminator on i3 startup
exec --no-startup-id terminator

# Automatically run feh on i3 startup or restart
exec_always --no-startup-id feh --bg-scale --randomize --recursive /usr/share/backgrounds

# Automatically run redshift on i3 startup or restart
exec_always --no-startup-id "killall redshift" 
#                                    reset     geo            Temp        light
exec_always --no-startup-id "redshift -P -l manual:42:42 -t 3500:2500 -b 0.8:0.6 &"

# Automatically run picom on i3 startup, (-b for daemonize)
exec_always --no-startup-id picom -b

# enable auto-mounting
exec --no-startup-id pcmanfm -d --no-desktop

# Print all window titles bold.
for_window [class=".*"] title_format "   <b>%title</b>"

# Enable window icons for all windows for i3 v4.20.
for_window [all] title_window_icon on

## Spacing between windows.
gaps inner 6
gaps outer 4

## Do not use spacing if only one window is open.
smart_gaps on

## When a window is in fullscreen, it will not take any spaces in relation to the borders.
smart_borders on

# System Lock by Shortcut
bindsym Control+$mod+l exec --no-startup-id "i3lock --image /tmp/screen_locked.png --tiling --show-failed-attempts"

# Take a screenshot by Shortcut
bindsym Control+$mod+s exec "mkdir -p ${HOME}/Images/Captures\ d\’écran/; scrot ${HOME}/Images/Captures\ d\’écran/screenshot_scrot_$(date +%Y-%m-%d_%H-%M-%S).png"

# clipboard tool
exec --no-startup-id greenclip daemon>/dev/null
bindsym Control+$mod+c exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard

# menu power on/off
bindsym $mod+Shift+e exec --no-startup-id ${HOME}/.config/i3scripts/i3power.sh

# Activates the numeric keyboard
exec --no-startup-id numlockx on

# Screen brightness control with light
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 2
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 2


